<%= form_for @profile do |f| %>
  <div class='col m6'>
    <%= f.label :first_name %>
    <%= f.text_field :first_name, required: true %>
  </div>
  <div class='col m6'>
    <%= f.label :last_name %>
    <%= f.text_field :last_name, required: true %>
  </div>
  <div class='col m6'>
    <%= f.label :email %>
    <%= f.email_field :email %>
  </div>
  <div class='input-field col m6'>
   <%= f.label :language %>
     <br />
     <br />
   <%= f.select :language, ['Ruby on Rails', 'HTML/CSS', 'JavaScript', 'PHP', 'Python', 'Java', 'Cake', 'ReactJS'] %>
 </div>
  <div class='col m6'>
    <%= f.label :experience %>
      <br />
      <br />
    <%= f.select :experience, ['> 1 year', '1-2 years', '3 years', '4 years', '5+ years'] %>
  </div>
  <div class='col m6'>
    <%= f.label :bio %>
    <%= f.text_area :bio %>
  </div>
  <div class='col m6'>
    <%= f.label :avatar %>
    <%= f.attachinary_file_field :avatar %>
  </div>
  <div class='center'>
    <%= f.submit nil, class: 'btn form-button' %>
  </div>
<% end %>
